@model Myshop.Core.ViewModels.ProductListViewModel

@{
    ViewBag.Title = "Home Page";
}

<h2>Our Products</h2>
<div class="col-md-2">
    <h4>Shop by department</h4>
    <div class="list-group">
        @Html.ActionLink("All", "Index", null, new { @class = Request["Section"] == null ? "list-group-item active" : "list-group-item" })
        @foreach (var Sec in Model.ProductSections)
        {
            @Html.ActionLink(Sec.Section, "Index", new { Section = Sec.Section }, new { @class = Request["Section"] == Sec.Section ? "list-group-item active" : "list-group-item" })
        }
    </div>
</div>

<div class="col-md-10">

    @foreach (var item in Model.Products)
    {

        <div class="col-md-4" style="height:450px;padding:10px;margin:10px;border: solid thin whitesmoke">
            <div class="col-md-12">
                <img class="img" style="height:250px" src="~/Content/ProductImages/@item.Image" />
            </div>
            <div class="col-md-12">
                <strong>@Html.ActionLink(item.Name, "Details", new { id = item.Id })</strong>
            </div>
            <div class="col-md-12">
                <p>@item.Description</p>
            </div>
            <div class="col-md-12">
                <h4>@item.Price</h4>
            </div>
            <div class="col-md-12">
                <button class="btn btn-success">Add to Cart</button>
            </div>
        </div>
    }
</div>
    <div class="col-md-12 clearfix" />
